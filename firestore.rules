
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper to check if the user is an admin
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // User Profiles: Only the owner or admin can read/write
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }
    
    // Global Tasks: Authenticated users can read, only Advertisers or Admins can create/write
    match /tasks/{taskId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'advertiser' || 
        isAdmin()
      );
    }
    
    // User Task Completions: Only the user or admin can view completions
    match /user_completions/{completionId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow write: if request.auth != null && (request.resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // Transactions: Only the user can view their own, Admin can view all and update status
    match /transactions/{transactionId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow write: if request.auth != null && (request.resource.data.userId == request.auth.uid || isAdmin());
    }
  }
}
